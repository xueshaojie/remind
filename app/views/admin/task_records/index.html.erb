<% content_for :main_content do %>
  <div class="main-content ">
    <div class="breadcrumbs" id="breadcrumbs">
      <ul class="breadcrumb">
        <%= render 'partials/home' %>
        <li>任务管理</li>
        <li><%= link_to '任务查询', admin_task_records_path %></li>
      </ul>
      <%#= render '/layouts/qrcode' %>
    </div>

    <div class="page-content">
      <%= form_for @search, url: admin_task_records_path, html: { method: :get } do |f| %>
        <div class="no-padding col-md-12">
          <div class="col-md-2">
            <div class="input-group input-group-sm input-group-text">
              <%= f.text_field :task_name_or_user_name_like, placeholder:"请输入任务或执行人", class: 'col-xs-12' %>
            </div>
          </div>

          <div class="col-md-4">
            <div class="input-group input-group-text">
              <span class="input-group-addon">执行时间：</span>
              <%=f.text_field :check_at_between, value:"#{params[:search][:check_at_gte]} - #{params[:search][:check_at_lte]}",class: 'col-xs-12 datetimerange' %>
            </div>
          </div>

          <div class="col-md-2">
            <%= f.submit '查询', class: 'btn btn-sm btn-filter btn-primary' %>
          </div>
        </div>
      <% end %>

      <div class="col-md-12 margin-top-20">
        <table id="vweddingTable" class="table table-bordered table-hover dataTable ">
          <thead>
          <tr>
            <th>任务时间</th>
            <th>任务名称</th>
            <th>任务检查项</th>
            <th>执行人</th>
            <th>执行时间</th>
            <th>描述</th>
            <th>上传图片</th>
            <!-- <th>创建时间</th> -->
          </tr>
          </thead>
          <tbody>
            <% @task_records.each do |task_record| %>
              <tr>
                <td><%= task_record.task.try(:time_info) %></td>
                <td><%= task_record.task.try(:name) %></td>
                <td><%= task_record.task_item.try(:name) %></td>
                <td><%= task_record.user.try(:name) %></td>
                <td><%= task_record.check_at %></td>
                <td><%= task_record.description %></td>
                <td>
                  <% task_record.task_pictures.each do |task_picture| %>
                    <%= link_to task_picture.pic_key, target: '_blank' do %>查看大图<% end %>
                  <% end %>
                </td>
                <!-- <td><%= task_record.created_at %></td> -->
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="pagination page width-auto"><%= page_entries_info @task_records %></div>
        <%= paginate @task_records %>
      </div>
    </div>

  </div>
<% end %>
