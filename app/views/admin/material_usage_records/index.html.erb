<style type="text/css">
  .aa {
    width: 225px;
  }
</style>
<% content_for :main_content do %>
  <div class="main-content ">
    <div class="breadcrumbs" id="breadcrumbs">
      <ul class="breadcrumb">
        <%= render 'partials/home' %>
        <li><%= link_to '物资资产管理', admin_materials_path %></li>
        <li><%= link_to '资产调整记录' %></li>
      </ul>
    </div>

    <div class="page-content">
      <%= form_for @search, url: admin_material_usage_records_path, html: { method: :get } do |f| %>
        <div class="no-padding col-md-12">
          <div class="col-md-2">
            <div class="input-group input-group-text">
              <%= f.text_field :material_no_or_material_name_like, placeholder: '请输入资产编号/名称', class: "col-xs-12" %>
            </div>
          </div>

          <div class="col-md-2">
            <div class="input-group input-group-text">
              <%= f.text_field :material_batch_no_like, placeholder: '请输入批次编号', class: "col-xs-12" %>
            </div>
          </div>

          <div class="col-md-4">
            <div class="input-group input-group-text">
              <span class="input-group-addon ">操作时间：</span>
              <%= f.text_field :created_at_created_at_between, class: "col-xs-12 cc datetimerange", value: "#{params[:search][:created_at_gte]} - #{params[:search][:created_at_lte]}" %>
            </div>
          </div>

          <div class="col-md-2">
            <%= f.select :operate_type_id_eq, MaterialUsageRecord.operate_type_id_options, {:include_blank => '请选择操作类型'}, class: "col-xs-12" %>
          </div>

          <div class="col-md-2">
            <%= f.submit '查询', class: 'btn btn-sm btn-filter btn-primary' %>
          </div>
        </div>
      <% end %>

      <div class="col-md-12 margin-top-20">
        <table id="vweddingTable" class="table table-bordered table-hover dataTable">
          <thead>
            <tr>
              <th>资产编号</th>
              <th>资产名称</th>
              <th>规格型号</th>
              <th>所属分类</th>
              <th>批次编号</th>
              <th>操作状态</th>
              <th>相关部门</th>
              <th>相关数量</th>
              <th>调后数量</th>
              <th>操作时间</th>
            </tr>
          </thead>
          <tbody>
            <% @material_usage_records.each do |material_usage_record| %>
              <tr>
                <td><%= material_usage_record.material_batch.material.try(:no) %></td>
                <td><%= material_usage_record.material_batch.material.try(:name) %></td>
                <td><%= material_usage_record.material_batch.material.try(:scale) %></td>
                <td><%= material_usage_record.material_batch.material.asset_category.try(:name) %></td>
                <td><%= material_usage_record.material_batch.no %></td>
                <td><%= material_usage_record.operate_type_id_name %></td>
                <td><%= material_usage_record.department.name %></td>
                <td><%= material_usage_record.qty %></td>
                <td><%= material_usage_record.after_qty %></td>
                <td><%= material_usage_record.created_at %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="pagination page width-auto"><%= page_entries_info @material_usage_records %></div>
        <%= paginate @material_usage_records %>
      </div>
    </div>

  </div>
<% end %>
