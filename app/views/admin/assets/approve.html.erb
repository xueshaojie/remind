<%# content_for :main_content do %>
<%= form_for @asset_log, url: deal_admin_asset_path(@asset_log), method: :put, validate: true, html: {class: 'form'} do |f| %>
  <div class="modal-body">
    <div class="col-xs-12">
      <div class="form-group">
        <label class="control-label">审核状态</label>
        <div class="clearfix">
          <%= f.select :status, AssetLog.status_options[1..2], {}, class: 'col-xs-4 select' %>
        </div>
      </div>

      <div class="form-group">
        <label class="control-label">理由</label>
        <div class="clearfix">
          <%= f.text_area :description, rows: 5, class: "col-xs-12" %>
        </div>
      </div>
    </div>
  </div>
  <div class="clearfix"></div>
  <div class="modal-footer">
    <button type="submit" class="btn btn-sm btn-primary form-submit" data-fn="submit">确定</button>
    <button type="button" class="btn btn-sm btn-default" data-dismiss="modals">取消</button>
  </div>
<% end %>
<%# end %>
