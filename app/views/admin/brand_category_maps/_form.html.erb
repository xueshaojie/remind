<style type="text/css">
    .select {
    width: 145px;
    height: 42px;
    padding-left: 10px;
  }
</style>
<%=form_for [:admin, @brand_category_map], validate: true, html:{class: 'form' } do | f| %>
  <div class="modal-body">
    <div class="col-xs-12">

      <div class="form-group">
        <label class="control-label">品牌名<span class="required-star">*</span></label>
        <div class="clearfix">
          <%= f.select :brand_id, Brand.pluck(:name, :id), {}, class: "col-xs-12" %>
        </div>  
      </div>

      <div class="form-group">
        <label class="control-label">分类<span class="required-star">*</span></label>
        <div class="clearfix">
          <%= f.select :product_category_id, ProductCategory.pluck(:name, :id), {}, class: "col-xs-12" %>
        </div>  
      </div>

      <div class="form-group">
        <label class="control-label">排序<span class="required-star">*</span></label>
        <div class="clearfix">
         <%= f.text_field :position, class: "col-xs-12 "%>  
        </div>  
      </div>

    </div>
  </div>

  <div class="clearfix"></div>
  <div class="modal-footer">
    <button type="submit" class="btn btn-sm btn-primary form-submit" data-fn="submit">确定</button>
    <button type="button" class="btn btn-sm btn-default" data-dismiss="modals">取消</button>
  </div>

  <%end%>