<% content_for :main_content do %>
  <div class="main-content">
    <div class="breadcrumbs" id="breadcrumbs">
      <ul class="breadcrumb">
        <%=render 'partials/home' %>
          <li><%=link_to '资产基础管理',admin_suppliers_path%></li>
          <li><%=link_to '供应商管理', admin_suppliers_path %></li>
      </ul>  
    </div> 

      <div class="page-content">
        <%= form_for @search, url: admin_suppliers_path, html: {method: :get } do |f| %>
          <div class="col-md-12  no-padding">
            <div class="col-md-3">
              <div class="input-group input-group-text ">
                <%=f.text_field :name_like,class: 'col-xs-12 cc', placeholder: '供应商名称' %>
              </div>
            </div>

            <div class="col-md-3">
              <%= f.submit '查询', class: 'btn btn-sm btn-filter btn-primary' %>
            </div>

            <div class="col-md-6">
              <a href="javascript:;" class="btn btn-primary btn-sm pull-right " data-target="addSupplier" data-toggle="modals" data-title="新增供应商" data-height="10000" data-iframe="<%= new_admin_supplier_path %>">新增</a>     
            </div>
          </div>   
        <%end%> 

        <div class="col-md-12 margin-top-20">
          <table id="vweddingTable" class="table table-bordered table-hover dataTable">
            <thead>
              <tr>
                <th>供应商名称</th>
                <th>联系人</th>
                <th>联系手机</th>
                <th>联系邮箱</th>
                <th>更新时间</th>
                <th>操作</th>
              </tr>
            </thead>
            <tbody>
              <% @suppliers.each do |supplier|%>
                <tr>
                  <td><%=supplier.name %></td>
                  <td><%=supplier.username %></td>
                  <td><%=supplier.tel %></td>
                  <td><%=supplier.email %></td>
                  <td><%=supplier.updated_at %></td>
                  <td>
                    <%=link_to '编辑', 'javascript:;', class: 'fgreen',data:{target: "editSuppliee",toggle: 'modals', title: '编辑供应商',height: '1000',
                     iframe:admin_supplier_path(supplier) } %>
                    <%=link_to '删除', admin_supplier_path(supplier), method: :delete, data: {confirm: "确定删除?"}%>
                  </td>
                </tr>
              <%end%>
            </tbody>
          </table>
        <div class="pagination page width-auto"><%= page_entries_info @suppliers %></div>
          <%= paginate @suppliers %>
        </div>

      </div>
    </div>
  <%end%>