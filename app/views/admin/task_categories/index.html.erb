<% content_for :main_content do %>
  <div class="main-content">
    <div class="breadcrumbs" id="breadcrumbs">
      <ul class="breadcrumb">
        <%=render 'partials/home' %>
          <li><%= '任务类型' %></li>
      </ul>
    </div>

      <div class="page-content">
        <%= form_for @search, url: admin_task_categories_path, html: {method: :get } do |f| %>
          <div class="col-md-12  no-padding">
            <div class="col-md-3">
              <div class="input-group input-group-text ">
                <span class="input-group-addon ">任务类型：</span>
                  <%=f.text_field :name_like,class: 'col-xs-12 cc'%>
              </div>
            </div>

            <div class="col-md-3">
             <%= f.submit '查询', class: 'btn btn-sm btn-filter btn-primary' %>
            </div>

            <div class="col-md-6">
              <a href="javascript:;" class="btn btn-primary btn-sm pull-right " data-target="add" data-toggle="modals" data-title="新增任务类型" data-height="10000" data-iframe="<%= new_admin_task_category_path %>">新增</a>
            </div>

          </div>
      <%end%>

       <div class="col-md-12 margin-top-20">
         <table id="vweddingTable" class="table table-bordered table-hover dataTable">
           <thead>
             <tr>
               <th>任务类型</th>
               <th>排序</th>
               <th>创建时间</th>
               <th>操作</th>
              </tr>
            </thead>
            <tbody>
              <% @task_categories.each do |task_category|%>
                <tr>
                  <td><%=task_category.name %></td>
                  <td><%=task_category.position %></td>
                  <td><%=task_category.created_at %></td>
                  <td>
                  <%=link_to '编辑', 'javascript:;', class: 'fgreen',data:{target: "editSuppliee",toggle: 'modals', title: '编辑任务类型',height: '1000',
                     iframe:admin_task_category_path(task_category) } %>
                  <%=link_to '删除', admin_task_category_path(task_category), method: :delete, data: {confirm: "确定删除?"}%>
                </td>
              </tr>
            <%end%>
          </tbody>
        </table>
        <div class="pagination page width-auto"><%= page_entries_info @task_categories %></div>
        <%= paginate @task_categories %>
      </div>
    </div>
  </div>
<%end%>