<style type="text/css">
  .itema{
    color:red;
    font-size: 14px;
  }
  .itemb{
    color: red;
    font-size: 14px;
  }
</style>

<%= form_for @plant_usage_record, url: handle_admin_plant_asset_path(@plant_asset, receive_plant_usage_record_id: @receive_plant_usage_record.try(:id)),  validate:true, method: :post, html:{class: 'form' } do |f| %>
 <div class="modal-body">
   <div class="col-xs-12">

   <div class="itema">
     <p>资产基本信息</p>
   </div>

    <div class="form-group">
     <label class="control-label">资产编号 : <%=@plant_asset.no %></label>
    </div>

    <div class="form-group">
      <label class="control-label">资产名称 : <%=@plant_asset.name %></label>
    </div>

    <div class="itemb">
      <p>资产归还信息</p>
    </div>

     <div class="form-group">
      <label class="control-label">归还部门:<%= @plant_usage_record.department.name %></label>
     </div>

     <div class="form-group">
       <label class="control-label">归还管理人 : <%= @plant_usage_record.department.try(:asset_user).try(:name) %></label>
     </div>

     <div class="form-group">
       <label class="control-label">归还备注</label>
       <div class="clearfix">
         <%=f.text_area :description, rows:4, cols:4, class: 'col-xs-12' %>
       </div>
     </div>

    </div>
   </div>

    <div class="clearfix"></div>
    <div class="modal-footer">
     <button type="submit" class="btn btn-sm btn-primary form-submit" data-fn="submit">确定</button>
     <button type="button" class="btn btn-sm btn-default" data-dismiss="modals">取消</button>
    </div>
 <%end%>