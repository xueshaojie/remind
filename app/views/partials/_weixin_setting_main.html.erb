<div class="form-group ">
	<label class="control-label">回复关键词<span class="required-star">*</span><small class="text-warning">关键词不能和其他进行中的活动的关键词重复</small></label>

	<div class="clearfix">
<!--		<input type="text" class="col-xs-6 " name="replyKeywords" placeholder="" require data-rule="unique">-->
    <%= activity.text_field :keyword, class: 'col-xs-6', placeholder: "请输入微医疗触发的关键字"  %>
	</div>
</div>

<div class="form-group ">
	<label class="control-label">微信消息标题<span class="required-star">*</span><span class="icon-question-sign " data-rel="popover" data-trigger="hover" data-placement="right" data-content="发送关键词后返回的微信消息标题" > </span></label>

		<div class="clearfix">
<!--			<input type="text" class="col-xs-6 " name="title" placeholder="" require>-->
			<%= activity.text_field :name, class: 'col-xs-6', placeholder: "请输入微信消息标题"  %>
		</div>
	</div>


	<div class="form-group">
		<label class="control-label">微信消息图片<span class="icon-question-sign " data-rel="popover" data-trigger="hover" data-placement="right" data-content="发送关键词后返回的微信消息图片" ></span></label>

		<div class="clearfix">
			<div class="cieldon-file width-100px " data-type="1" data-div="#img-1" data-height="200"></div>
		</div>
	</div>
	<div class="form-group">
		<label class="control-label">微信消息摘要<span class="icon-question-sign " data-rel="popover" data-trigger="hover" data-placement="right" data-content="发送关键词后返回的微信消息摘要" ></span></label>
		<!--<textarea class="form-control" rows="5" placeholder="不能超过255个字." data-maxlength="255" data-error="最好不要超过255个字" data-rule="length"></textarea>-->
		<%= activity.text_area :summary, rows: 5, maxlength: 255, data: { maxlength: "255", error: "最好不要超过255个字", rule: "length"}, placeholder: "请输入微信消息摘要", class: "form-control" %>
	</div>


	<div class="form-group ">
		<input type="submit" class="btn btn-sm btn-primary" value="保存">
		<input type="button" class="btn btn-sm btn-default" value="停用">
	</div>