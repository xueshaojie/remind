<div class="box-upload fl">
	<p> <span>楼盘图片<span class="fgray">（图片尺寸建议：1136*640）</span></span> </p>
	<div class="upload-img">
    <% if f.object.pic_key.present? %>
      <span><%=image_tag f.object.pic_url, alt: "", class: "preview" %></span>
    <% else %>
      <span><img alt="" class="preview" src=""></span>
    <% end %>
	</div>
	<div class="upload-btn box-file">
		<div class="hidden">
			<%= f.hidden_field field_name %>
		</div>
		<%=file_field_tag "file", data: {url: "http://up.qiniu.com", bucket: BUCKET_PICTURES, 'form-data'=>{token: qiniu_pictures_upload_token }}, class: "single_picture_uploader" %>
		<a class="btn btn-big">上传照片</a>
	</div>
</div>


<%= javascript_tag do %>
	single_picture_uploader()
<% end %>

