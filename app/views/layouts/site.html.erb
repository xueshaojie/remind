<!doctype html>
<html class="<%= @html_class || action_name %>">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <meta name="keywords" content="<%= content_for?(:keywords) ? yield(:keywords) : "标途" %>" />
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "标途" %>" />
    <meta name="viewport" content="width=1200" />
    <title><%= content_for?(:title) ? yield(:title) : "首页" %></title>
    <%= yield :custom_css if content_for?(:custom_css) %>
    <%= stylesheet_link_tag "sitev1", media: "all" %>
    <%= javascript_include_tag "sitev1" %>
    <%= csrf_meta_tags %>
    <%#= render 'application/baidu_tongji' %>
  </head>
  <body>
    <%= render 'application/header' %>
    <%= content_for?(:content) ? yield(:content) : yield %>
    <%= render 'application/footer' unless @no_footer %>
    <%= yield :custom_js if content_for?(:custom_js) %>
  </body>
</html>
