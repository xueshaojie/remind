<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="user-scalable=no, initial-scale=1.0, maximum-scale=1.0, width=device-width">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta content="black" name="apple-mobile-web-app-status-bar-style">
    <meta name="format-detection" content="telephone=no">
    <meta content="telephone=no" name="format-detection">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title><%= @activity.name.presence || '微报名' %></title>
    <%= stylesheet_link_tag "mobile/vapply" %>
    <script type="text/javascript">
        can_apply = <%= (@activity.enroll_status_attrs[0] == '进行中') ? true : false %>;
    </script>
    <%= javascript_include_tag "mobile/vapply" %>
     <%= csrf_meta_tags %>
  </head>
  <%- theme = 'theme1' %>
  <%- if @activity.present? %>
    <%- if @activity.extend.template_id.to_i == 2 %>
      <%- theme = 'theme2' %>
    <%- elsif @activity.extend.template_id.to_i == 3%>
      <%- theme = 'theme3' %>
    <%- end %>
  <%- end %>
<body class="<%= theme %>">
  <%= yield %>
 <%= render 'application/app_footer' %>
</body>
</html>