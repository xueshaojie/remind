<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="user-scalable=no, initial-scale=1.0, maximum-scale=1.0, width=device-width">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta content="black" name="apple-mobile-web-app-status-bar-style">
    <meta name="format-detection" content="telephone=no">
    <meta content="telephone=no" name="format-detection">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <title><%= content_for?(:title) ? yield(:title) : "老虎机" %></title>

    <link type="text/css" rel="stylesheet" href="/stylesheets/slot/main.css"/>
    <link type="text/css" rel="stylesheet" href="/stylesheets/slot/tiger.css"/>
    <%= stylesheet_link_tag 'mobile/showshare'%>
    <%= csrf_meta_tags %>
  </head>

  <body>
  <%= render 'application/gb2big5' %>
    <div class="html">
      <div class="main">
        <%= yield %>
      </div>
    </div>

    <%= render 'application/app_footer' %>

    <div class="pop pop-form" id="pop-form"></div>

    <div class="pop pop-result" id="pop-result">
      <div class="pop-bg" onclick="cancer_submit();"></div>
      <div class="pop-bd">
        <div class="box-pop">
          <span id="error_message" style="color: green;"></span>
        </div>
      </div>
    </div>

    <% if flash[:notice] %>
        <script type="text/javascript">
            error_message_alert(0,"<%= flash[:notice] %>")
        </script>
    <% end %>
  </body>
</html>
