<%= form_tag wap_sign_in_path, method: :post do %>
  <div class="form-group">
    <div class="li-input">
      <%= text_field_tag :login_name, params[:login_name] , class: "txt", id: "account-place", placeholder: '请输入账号' %>
    </div>
  </div>
  <div class="form-group">
    <div class="li-input">
      <%= password_field_tag :password, nil, class: "txt", id: "password-place", placeholder: '请输入密码' %>
    </div>
  </div>

  <div class="form-group">
    <div class="li-input">
      <input type="submit" name="登录" value="登录">
    </div>
  </div>
<% end %>